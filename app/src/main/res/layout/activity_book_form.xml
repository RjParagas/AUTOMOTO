<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookForm">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/shopimages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/cards"/>
            <Button
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_back" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardfuck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp"
            app:cardCornerRadius="40dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please make sure you fill up all the fields"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />


                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Booking Type"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />

                <RadioGroup
                    android:id="@+id/Area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:backgroundTint="@color/extracolor"
                    android:layout_marginTop="20dp"
                    >
                    <RadioButton
                        android:id="@+id/onShop"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:text="On Shop"
                        android:textAlignment="center"
                        android:layout_marginLeft="70dp"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/radio_text_color"
                        android:button="@android:color/transparent"
                        android:padding="16dp"
                        android:elevation="20dp"
                        />
                    <RadioButton
                        android:id="@+id/onPlace"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:text="On Place"
                        android:textAlignment="center"
                        android:layout_marginLeft="70dp"
                        android:background="@drawable/radio_selector"
                        android:textColor="@drawable/radio_text_color"
                        android:layout_marginTop="20dp"
                        android:button="@android:color/transparent"
                        android:padding="16dp"
                        android:elevation="20dp"
                        />
                </RadioGroup>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</LinearLayout>