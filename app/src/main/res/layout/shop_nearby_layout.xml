<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/bullshit"
            android:layout_width="140dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nearby_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/cards" />
        </RelativeLayout>

            <TextView
                android:id="@+id/nearby_shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/bullshit"
                android:text="SHOP NAME"
                android:textColor="@color/cards"
                android:textSize="13sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/nearby_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nearby_shopName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/bullshit"
                android:text="ADDRESS"
                android:textColor="@color/cards"
                android:textSize="12sp" />


            <ImageButton
                android:id="@+id/nearby_navigate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:layout_toRightOf="@+id/bullshit"
                android:background="@drawable/ic_direction"
                android:backgroundTint="@color/buttons"/>


            <TextView
                android:id="@+id/nearby_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nearby_address"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/nearby_navigate"
                android:text="Distance"
                android:textColor="@color/cards" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nearby_address"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/nearby_distance"
                android:text="KM"
                android:textColor="@color/cards" />

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>