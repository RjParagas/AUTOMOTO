<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/shop_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/cards" />

                <Button
                    android:id="@+id/p_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_back" />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/p_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:fontFamily="@font/droid_sans_mono"
            android:text="NAME"
            android:layout_marginTop="170dp"
            android:textColor="@color/extracolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/p_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="@color/buttons"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/verif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_toRightOf="@+id/profile_img"
            android:text="Verified"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/Green"
            android:textStyle="bold"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/pend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_toRightOf="@+id/profile_img"
            android:text="Pending"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/mediumOrange"
            android:textStyle="bold"
            android:visibility="gone"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_marginTop="250dp"
            app:cardElevation="0dp"
            android:id="@+id/cardshit"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Account is not fully Verified"
                    android:textColor="@color/red" />

                <Button
                    android:id="@+id/btnverify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Verify"
                    android:textSize="10dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/p_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_baseline_settings_24" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="5dp"
                android:layout_marginTop="320dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/total_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/cards"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CART"
                        android:fontFamily="@font/hind_light"
                        android:textSize="18dp"
                        android:textColor="@color/cards"
                        android:textStyle="bold"/>

                     </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="40dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/total_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/cards"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ORDER"
                            android:fontFamily="@font/hind_light"
                            android:textColor="@color/cards"
                            android:textStyle="bold"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="40dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/total_booking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/cards"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BOOKING"
                            android:fontFamily="@font/hind_light"
                            android:textStyle="bold"
                            android:textColor="@color/cards"
                            android:textSize="18dp" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_account_circle_24" />

                <TextView
                    android:id="@+id/p_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"

                    android:text="Name"
                    android:textColor="@color/cards"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_email_24"
                    app:tint="@color/lightblue" />

                <TextView
                    android:id="@+id/p_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:textColor="@color/cards"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    app:tint="@color/Green" />

                <TextView
                    android:id="@+id/p_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Contact"
                    android:textColor="@color/cards"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/home"
                    app:tint="@color/buttons" />

                <TextView
                    android:id="@+id/p_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Address"
                    android:textColor="@color/cards"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>