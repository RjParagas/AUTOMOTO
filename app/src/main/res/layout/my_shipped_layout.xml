<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/s_item"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                >

                <ImageView
                    android:id="@+id/s_imgitem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/cards" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/sp_pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/s_item"
                android:fontFamily="@font/hind_light"
                android:text="Product Name"
                android:textColor="@color/black"

                />

            <TextView
                android:id="@+id/sp_ptotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/s_item"
                android:fontFamily="@font/hind_light"
                android:text="Price"
                android:textColor="@color/black"

                />

            <TextView
                android:id="@+id/sp_pqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@+id/s_item"
                android:fontFamily="@font/hind_light"
                android:text="Quantity"
                android:textColor="@color/black"

                />

            <TextView
                android:id="@+id/pstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="90dp"
                android:layout_toRightOf="@+id/s_item"
                android:fontFamily="@font/hind_light"
                android:text="Shipped Days: "
                android:textColor="@color/background"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sp_pstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:layout_toRightOf="@+id/pstatus"
                android:fontFamily="@font/hind_light"
                android:text="Days"
                android:textColor="@color/Green"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >





        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>